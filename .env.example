# Example Environment Variables for TW Institutional Stocker
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_actual_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Analysis Configuration
ENABLE_AI_ANALYSIS=true
AI_ANALYSIS_LANGUAGE=zh-TW

# Data Update Configuration
UPDATE_INTERVAL_HOURS=24
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT_SECONDS=30

# Web Server Configuration
SERVER_PORT=8000
SERVER_HOST=localhost

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Market Data Configuration
TWSE_BASE_URL=https://www.twse.com.tw
TPEX_BASE_URL=https://www.tpex.org.tw

# AI Analysis Features
ENABLE_TREND_ANALYSIS=true
ENABLE_BROKER_PATTERN_ANALYSIS=true
ENABLE_MARKET_SENTIMENT=true
ENABLE_STOCK_RECOMMENDATIONS=true

# Cache Configuration
ENABLE_DATA_CACHE=true
CACHE_EXPIRY_MINUTES=60